{
  "exclude": ["__tests__"],
  "compilerOptions": {
    "lib": ["ES2019", "DOM.Iterable"],
    "target": "ES2019",

    "module": "CommonJS",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,

    "outDir": "../../build/node_modules/@remix-run/css-modules",
    "rootDir": "."
  }
}
